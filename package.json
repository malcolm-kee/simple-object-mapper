{
  "name": "simple-object-mapper",
  "version": "0.1.0",
  "description": "Simple data transformation utility",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --p tsconfig.json",
    "prebuild": "rimraf dist",

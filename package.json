  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/malcolm-kee/simple-object-mapper.git"
  },
  "keywords": ["data-mapping"],
  "author": {
    "name": "Malcolm Kee",
    "email": "malcolm.keeweesiong@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/malcolm-kee/simple-object-mapper/issues"
  },
  "homepage": "https://github.com/malcolm-kee/simple-object-mapper#readme",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "jest": "^22.4.3",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.4",
    "typescript": "^2.8.3"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 90
  },
